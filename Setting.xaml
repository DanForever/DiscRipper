<UserControl x:Class="DiscRipper.Setting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiscRipper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Grid.Column="0" Background="LightGray" VerticalAlignment="Center" Padding="5" />
        <ContentPresenter Content="{Binding InnerContent, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}" Grid.Column="1" VerticalAlignment="Stretch">
            <ContentPresenter.Resources>
                <Style TargetType="Control">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </ContentPresenter.Resources>
        </ContentPresenter>
    </Grid>
</UserControl>
