<Window x:Class="DiscRipper.Windows.BestMatch"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscRipper"
        mc:Ignorable="d"
        Title="BestMatch" Height="450" Width="800">
    <DockPanel>
        <Button x:Name="Previous" DockPanel.Dock="Left" Click="Previous_Click">
            <TextBlock Text="&#x2190;" FontSize="48" />
        </Button>
        <Button x:Name="Next" DockPanel.Dock="Right" Click="Next_Click">
            <TextBlock Text="&#x2192;" FontSize="48" />
        </Button>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="60" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="Title" Grid.RowSpan="2" Padding="5,0,5,0" Background="LightBlue" FontWeight="DemiBold" />
            <TextBlock Grid.Column="0" Grid.Row="1" Text="Disc Index" Padding="5,0,5,0" Background="#ff7ec0d7" FontWeight="DemiBold" />
            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding tddbRelease.Title }" Background="LightBlue" />
            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding tddbDisc.Index }" Background="#ff7ec0d7" />
        </Grid>
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Left" Margin="5" Click="AddNewRelease_Click">
                <TextBlock Text="Add new release" FontSize="24" Margin="5" />
            </Button>
            <Button DockPanel.Dock="Left" Margin="5" Click="AddDiscToRelease_Click">
                <TextBlock Text="Add disc to release" FontSize="24" Margin="5" />
            </Button>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="5" Click="Cancel_Click">
                    <TextBlock Text="Cancel" FontSize="24" Margin="5" />
                </Button>
                <Button Margin="5" Click="Rip_Click">
                    <TextBlock Text="Rip!" FontSize="32" Margin="5" />
                </Button>
            </StackPanel>
        </DockPanel>
        <Image x:Name="CoverImage" Stretch="Uniform" DockPanel.Dock="Right" />
        <DockPanel DockPanel.Dock="Bottom">
            <Button DockPanel.Dock="Right" Click="PickFolder_Click">
                <TextBlock Text="Pick folder" Margin="5" />
            </Button>
            <TextBox x:Name="OutputPath" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <DataGrid x:Name="FoundTitles" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Rip" Binding="{Binding Rip}" />
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" IsReadOnly="True" Width="*" />
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </DockPanel>
</Window>
