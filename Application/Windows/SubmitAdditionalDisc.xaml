<Window x:Class="DiscRipper.Windows.SubmitAdditionalDisc"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscRipper"
        xmlns:controls="clr-namespace:DiscRipper.Controls"
        mc:Ignorable="d"
        Title="SubmitSecondDisc" Height="450" Width="800">
    <Grid IsSharedSizeScope="True">
        <DockPanel>

            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button DockPanel.Dock="Right" Margin="5" Click="Cancel_Click">
                    <TextBlock Text="Cancel" FontSize="24" Margin="5" />
                </Button>
                <Button DockPanel.Dock="Right" Margin="5" Click="Submit_Click">
                    <TextBlock Text="Submit!" FontSize="32" Margin="5" />
                </Button>
            </StackPanel>

            <controls:DiscProperties DockPanel.Dock="Left" />
            <controls:DiscTitles x:Name="DiscTitles" />
        </DockPanel>
    </Grid>
</Window>
