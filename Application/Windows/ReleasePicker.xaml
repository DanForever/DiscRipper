<Window x:Class="DiscRipper.Windows.ReleasePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscRipper.Windows"
        xmlns:types="clr-namespace:DiscRipper.Types;assembly=DiscRipper.Types"
        mc:Ignorable="d"
        Title="ReleasePicker" Height="450" Width="800">
    <DockPanel Margin="5">
        <TextBox DockPanel.Dock="Top" FontSize="16" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
        <TreeView ItemsSource="{Binding FilteredMedia}" FontSize="14" MouseDoubleClick="Tree_DoubleClick">
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type types:Media}" ItemsSource="{Binding Releases}">
                    <TextBlock Text="{Binding Title}" />
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type types:Release}">
                    <TextBlock Text="{Binding Slug}" />
                    <!-- Button MouseDoubleClick="ReleaseSlug_MouseDoubleClick" Margin="2" Padding="3">
                        <TextBlock Text="{Binding Slug}" />
                    </Button -->
                </HierarchicalDataTemplate>
            </TreeView.Resources>
        </TreeView>
    </DockPanel>
</Window>
