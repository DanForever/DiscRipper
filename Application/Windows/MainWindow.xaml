<ui:FluentWindow x:Class="DiscRipper.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:DiscRipper"
        mc:Ignorable="d"
        Height="700" Width="1250"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Auto"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">

            <ui:Button Width="48" Height="32" Margin="5" DockPanel.Dock="Left" >
                <Viewbox Stretch="Uniform">
                    <ContentControl Content="{StaticResource GitHubIcon}" Background="{ui:ThemeResource ApplicationBackgroundBrush}" Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}" />
                </Viewbox>
            </ui:Button>
            <Grid Width="48" Height="32" Margin="5" DockPanel.Dock="Left" Background="{ui:ThemeResource ApplicationBackgroundBrush}">
                <!-- Use StaticResource to add the Canvas to the visual tree -->
                <Viewbox Stretch="Uniform">
                    <ContentControl Content="{StaticResource GitHubIcon}" />
                </Viewbox>
            </Grid>
            <Menu DockPanel.Dock="Left">
                <MenuItem Header="_File">
                    <MenuItem Header="_Settings" Click="Settings_Click"/>
                    <Separator/>
                    <MenuItem Header="Rescan Drives" Click="RescanDrives_Click"/>
                    <Separator/>
                    <MenuItem Header="_Exit" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="_Session">
                    <MenuItem Header="_Load previous session" Click="LoadPreviousSession_Click"/>
                    <Separator/>
                    <MenuItem Header="Add new disc to existing release" Click="AddNewDisc_Click"/>
                </MenuItem>
                <MenuItem Header="_Debug" x:Name="DebugMenu">
                    <MenuItem Header="Test new release" Click="TestRelease_Click"/>
                    <MenuItem Header="Test new disc" Click="TestDisc_Click"/>
                </MenuItem>
            </Menu>
            <ui:TitleBar Title="Disc Ripper">
                <ui:TitleBar.TrailingContent>
                    <WrapPanel>
                        <ui:Button Appearance="Caution">Beta</ui:Button>
                        <ui:Button Width="48" Height="32" Margin="5">
                            <Viewbox Stretch="Uniform">
                                <ContentControl Content="{StaticResource GitHubIcon}" />
                            </Viewbox>
                        </ui:Button>
                        <ui:Button Width="48" Height="32" Margin="5" Click="SwitchTheme_Click">
                            <Viewbox Stretch="Uniform">
                                <ContentControl Content="{StaticResource ThemeSwitchIcon}" />
                            </Viewbox>
                        </ui:Button>
                    </WrapPanel>
                </ui:TitleBar.TrailingContent>
            </ui:TitleBar>
        </DockPanel>
        <DockPanel Margin="5">
            <TextBlock DockPanel.Dock="Top" Text="Drives" Margin="0,0,0,5" />
            <ui:DataGrid x:Name="Drives" DockPanel.Dock="Left" ItemsSource="{Binding Drives}" AutoGenerateColumns="False" Width="500" IsReadOnly="True" MouseDoubleClick="Drives_MouseDoubleClick">
                <ui:DataGrid.Columns>
                    <DataGridTextColumn Header="Type" Binding="{Binding DiscType}" />
                    <DataGridTextColumn Header="Path" Binding="{Binding DrivePath}" />
                    <DataGridTextColumn Header="Name" Binding="{Binding DriveName}" />
                    <DataGridTextColumn Header="Detected Media" Binding="{Binding MediaTitle}" />
                </ui:DataGrid.Columns>
            </ui:DataGrid>
        </DockPanel>
        <StackPanel Margin="5" Width="200">
            <TextBlock DockPanel.Dock="Top" Text="What do you want to do today?" Margin="0,0,0,25" />
            <Button Margin="5,5,5,10" Click="Rip_Click">
                <TextBlock Text="Rip" FontSize="48" Margin="10" />
            </Button>
            <Button Margin="5,5,5,10" Click="SubmitNewRelease_Click">
                <TextBlock Text="Submit new release" FontSize="48" Margin="10" TextWrapping="Wrap" />
            </Button>
            <Button Margin="5,5,5,10" Click="AddNewDisc_Click">
                <TextBlock Text="Add disc to release" FontSize="48" Margin="10" TextWrapping="Wrap" />
            </Button>
        </StackPanel>
        <DockPanel Margin="5">
            <TextBlock DockPanel.Dock="Top" Text="Log" Margin="0,0,0,5" />
            <local:Feedback x:Name="Feedback" />
        </DockPanel>
    </DockPanel>
</ui:FluentWindow>
