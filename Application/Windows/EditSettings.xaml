<ui:FluentWindow x:Class="DiscRipper.Windows.EditSettings"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:DiscRipper"
        mc:Ignorable="d"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Auto"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        Title="Settings" Height="450" Width="800" Closing="Window_Closing">
    <DockPanel>

        <ui:TitleBar Title="Settings" FontWeight="SemiBold" DockPanel.Dock="Top" />
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="MakeMkv install path"  Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="5" />
            <DockPanel Grid.Column="1" Grid.Row="1" Margin="5">
                <Button DockPanel.Dock="Right" Click="Click_SelectMakemkvDirectory" Margin="5" >
                    <TextBlock Text="Pick folder" Margin="5" />
                </Button>
                <TextBox x:Name="MakeMkvPathTextBox" Padding="5" Text="{Binding Source={x:Static local:Settings.Default}, Path=MakeMkvInstallFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
            </DockPanel>

            <TextBlock Text="Repository path"  Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" Margin="5" />
            <DockPanel Grid.Column="1" Grid.Row="2" Margin="5">
                <Button DockPanel.Dock="Right" Click="Click_SelectRepositoryDirectory" Margin="5" >
                    <TextBlock Text="Pick folder" Margin="5" />
                </Button>
                <TextBox x:Name="RepositoryPathTextBox" Padding="5" Text="{Binding Source={x:Static local:Settings.Default}, Path=RepositoryFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
            </DockPanel>

            <TextBlock Text="Makemkv minimum title length" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" Margin="5" />
            <DockPanel Grid.Column="1" Grid.Row="3" Margin="5">
                <ui:NumberBox MaxDecimalPlaces="0" Padding="5" Value="{Binding Source={x:Static local:Settings.Default}, Path=MakeMkvMinimumTitleLength, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" />
            </DockPanel>
        </Grid>
    </DockPanel>
</ui:FluentWindow>
