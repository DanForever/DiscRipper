<Window x:Class="DiscRipper.SubmitNewDisc"
        x:ClassModifier="internal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiscRipper"
        mc:Ignorable="d"
        Title="SubmitNewDisc" Height="450" Width="800">
    <Grid IsSharedSizeScope="True">
        <DockPanel>
            
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button DockPanel.Dock="Right" Margin="5" Click="Cancel_Click">
                    <TextBlock Text="Cancel" FontSize="24" Margin="5" />
                </Button>
                <Button DockPanel.Dock="Right" Margin="5" Click="Submit_Click">
                    <TextBlock Text="Submit!" FontSize="32" Margin="5" />
                </Button>
            </StackPanel>
            
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </StackPanel.Resources>
                <local:Setting Label="TMDB ID">
                    <TextBox Text="{Binding TMDB, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Media type">
                    <ComboBox ItemsSource="{Binding Mode=OneTime, Source={x:Static local:SubmitNewDisc.MediaTypes }}" SelectedValue="{Binding MediaType, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Disc format">
                    <ComboBox ItemsSource="{Binding Mode=OneTime, Source={x:Static local:SubmitNewDisc.DiscFormats }}" SelectedValue="{Binding DiscFormat, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Release slug">
                    <TextBox Text="{Binding ReleaseSlug, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="UPC">
                    <TextBox Text="{Binding UPC, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="ASIN">
                    <TextBox Text="{Binding ASIN, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Release publication date">
                    <DatePicker SelectedDate="{Binding PublicationDate, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Front cover image URL">
                    <TextBox Text="{Binding FrontCoverUrl, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Back cover image URL">
                    <TextBox Text="{Binding BackCoverUrl, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Name of release/edition">
                    <TextBox Text="{Binding EditionName, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Name of disc">
                    <TextBox Text="{Binding DiscTitle, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
                <local:Setting Label="Disc slug">
                    <TextBox Text="{Binding DiscSlug, RelativeSource={RelativeSource AncestorType=local:SubmitNewDisc}}" />
                </local:Setting>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
